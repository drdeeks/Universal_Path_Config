{
  "name": "universal-dev-setup",
  "version": "1.3.0",
  "description": "Universal Development Environment Setup - Electron App with Project & Tool Migration",
  "main": "src/main.js",
  "homepage": "https://github.com/universal-dev-setup/universal-dev-setup",
  "scripts": {
    "start": "electron .",
    "start-safe": "electron . --disable-gpu-sandbox --no-sandbox",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rmdir /s /q dist node_modules 2>nul || true",
    "rebuild": "npm run clean && npm install && npm run build:portable",
    "update": "npm run build:portable && update-executable.bat"
  },
  "keywords": [
    "development",
    "environment",
    "setup",
    "automation",
    "windows",
    "electron",
    "devtools",
    "wsl",
    "python-detection",
    "admin-privileges",
    "cleanup",
    "migration",
    "project-organization",
    "tool-scanning",
    "file-migration",
    "centralized-development"
  ],
  "author": {
    "name": "Universal Dev Setup Team",
    "email": "contact@universal-dev-setup.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-dev-setup/universal-dev-setup.git"
  },
  "bugs": {
    "url": "https://github.com/universal-dev-setup/universal-dev-setup/issues"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "node-powershell": "^5.0.1"
  },
  "build": {
    "appId": "com.universal.devsetup",
    "productName": "Universal Dev Setup",
    "artifactName": "${productName} ${version}.${ext}",
    "copyright": "Copyright Â© 2024 Universal Dev Setup Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "dev-setup-script.txt",
      "setup-path-configs.ps1",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "dev-setup-script.txt",
        "to": "dev-setup-script.txt"
      },
      {
        "from": "setup-path-configs.ps1",
        "to": "setup-path-configs.ps1"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName} ${version}.${ext}",
      "publisherName": "Universal Dev Setup Team",
      "forceCodeSigning": false,
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Universal Dev Setup",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": true,
      "multiLanguageInstaller": true,
      "packElevateHelper": true
    },
    "portable": {
      "artifactName": "${productName} ${version} Portable.${ext}",
      "requestExecutionLevel": "admin"
    },
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "universal-dev-setup",
      "repo": "universal-dev-setup"
    },
    "releaseInfo": {
      "releaseNotes": "Universal Development Environment Setup Tool v1.3.0 - NEW: Comprehensive Project & Tool Migration system with smart scanning, centralized organization, and safe backup operations. Enhanced environment management with selective migration capabilities."
    }
  }
} 